{
    "manifest_version": 3,
    "name": "Media Leap",
    "description": "A quick way to view and track social media profiles with a simple right-click operation",
    "version": "0.3",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions": [
        "contextMenus"
    ],
    "background": {
        "service_worker": "./background.js",
        "type": "module"
    }
}